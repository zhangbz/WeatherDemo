<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.janiszhang.weatherdemo.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市名称:"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/query_button"/>
        <EditText
            android:layout_toRightOf="@+id/tv_city_name"
            android:id="@+id/city_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/query_button"/>
        <Button
            android:layout_toRightOf="@+id/city_name"
            android:id="@+id/query_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新时间:"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/update_button"/>
        <TextView
            android:layout_toRightOf="@+id/tv_update_time"
            android:layout_marginLeft="10dp"
            android:id="@+id/update_time"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="暂无更新"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/update_button"/>
        <Button
            android:layout_toRightOf="@+id/update_time"
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="4">
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="天气情况"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_weather_state"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="体感温度"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_temperature"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="质量指数"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_weather_level"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="质量类别"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_weather_evaluate"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="近三日天气信息"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TableLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="日期:"/>
                <TextView
                    android:id="@+id/date0"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="天气状况:"/>
                <TextView
                    android:id="@+id/state0"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="最高气温:"/>
                <TextView
                    android:id="@+id/max0"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="最低气温:"/>
                <TextView
                    android:id="@+id/min0"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="日期:"/>
                <TextView
                    android:id="@+id/date1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="天气状况:"/>
                <TextView
                    android:id="@+id/state1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="最高气温:"/>
                <TextView
                    android:id="@+id/max1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="最低气温:"/>
                <TextView
                    android:id="@+id/min1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="日期:"/>
                <TextView
                    android:id="@+id/date2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="天气状况:"/>
                <TextView
                    android:id="@+id/state2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="最高气温:"/>
                <TextView
                    android:id="@+id/max2"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="最低气温:"/>
                <TextView
                    android:id="@+id/min2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
